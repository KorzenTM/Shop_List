<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/recycler_view_item_border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Spaghetii"
        android:textStyle="bold"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/numberOfIngredientsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="15/20"
        android:textSize="30dp">

    </TextView>

    <ImageView
        android:id="@+id/imPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_menu_dot">

    </ImageView>

    <TextView
        android:id="@+id/created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name_text_view"
        android:text="Created: "
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/time_of_creation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberOfIngredientsTextView"
        android:layout_toEndOf="@id/created_text_view"
        android:text="2012-15-15"
        android:textStyle="italic"
        android:textSize="20dp">

    </TextView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/number_of_ingredients_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/options_text_view"

        android:layout_alignParentEnd="true"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:id="@+id/options_text_view"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge">

    </TextView>

    <TextView
        android:id="@+id/created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name_text_view"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/created"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/time_of_creation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/list_name_text_view"
        android:layout_toEndOf="@id/created_text_view"
        android:textStyle="italic"
        android:textSize="20dp">

    </TextView>

</RelativeLayout>